<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f8f9fa">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- 标题栏 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="我的宠物"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#333333" />

            <ImageButton
                android:id="@+id/settings_button"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_settings"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:scaleType="centerInside" />
        </LinearLayout>

        <!-- 宠物信息卡片 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- 宠物基本信息 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@drawable/pet_avatar_background"
                        android:gravity="center"
                        android:text="🐕"
                        android:textSize="40sp"
                        android:layout_marginEnd="20dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/pet_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="小白"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:textColor="#333333" />

                        <TextView
                            android:id="@+id/pet_breed"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="金毛犬 • 3岁"
                            android:textSize="16sp"
                            android:textColor="#666666"
                            android:layout_marginTop="4dp" />

                        <!-- 健康状态 -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="8dp"
                            android:gravity="center_vertical">

                            <TextView
                                android:id="@+id/health_stars"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="⭐⭐⭐⭐⭐"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/health_status_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="健康良好"
                                android:textSize="14sp"
                                android:textColor="#4CAF50"
                                android:layout_marginStart="8dp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <!-- 今日提醒 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingHorizontal="20dp"
                    android:paddingBottom="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="今日提醒"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#333333"
                        android:layout_marginBottom="12dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:background="@drawable/function_button_background"
                            android:padding="12dp"
                            android:layout_marginEnd="8dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="🍖"
                                android:textSize="24sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="喂食"
                                android:textSize="12sp"
                                android:textColor="#666666"
                                android:layout_marginTop="4dp" />

                            <TextView
                                android:id="@+id/feeding_status"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="✓ 已完成"
                                android:textSize="10sp"
                                android:textColor="#4CAF50"
                                android:layout_marginTop="2dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:background="@drawable/function_button_background"
                            android:padding="12dp"
                            android:layout_marginEnd="8dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="🚶"
                                android:textSize="24sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="遛弯"
                                android:textSize="12sp"
                                android:textColor="#666666"
                                android:layout_marginTop="4dp" />

                            <TextView
                                android:id="@+id/walk_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="14:00"
                                android:textSize="10sp"
                                android:textColor="#FF6B9D"
                                android:layout_marginTop="2dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:background="@drawable/function_button_background"
                            android:padding="12dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="🛁"
                                android:textSize="24sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="洗澡"
                                android:textSize="12sp"
                                android:textColor="#666666"
                                android:layout_marginTop="4dp" />

                            <TextView
                                android:id="@+id/bath_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="明天"
                                android:textSize="10sp"
                                android:textColor="#999999"
                                android:layout_marginTop="2dp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- 快捷功能 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="16dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="快捷功能"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginBottom="12dp" />

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:useDefaultMargins="true">

                <androidx.cardview.widget.CardView
                    android:id="@+id/health_record_card"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="4dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    android:foreground="?android:attr/selectableItemBackground">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="📋"
                            android:textSize="28sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="健康记录"
                            android:textSize="14sp"
                            android:textColor="#333333"
                            android:layout_marginTop="8dp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/pet_album_card"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="4dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    android:foreground="?android:attr/selectableItemBackground">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="📸"
                            android:textSize="28sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="相册"
                            android:textSize="14sp"
                            android:textColor="#333333"
                            android:layout_marginTop="8dp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/feeding_plan_card"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="4dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    android:foreground="?android:attr/selectableItemBackground">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="🍽️"
                            android:textSize="28sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="喂食计划"
                            android:textSize="14sp"
                            android:textColor="#333333"
                            android:layout_marginTop="8dp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/activity_data_card"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="4dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    android:foreground="?android:attr/selectableItemBackground">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="📊"
                            android:textSize="28sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="运动数据"
                            android:textSize="14sp"
                            android:textColor="#333333"
                            android:layout_marginTop="8dp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </GridLayout>
        </LinearLayout>

        <!-- 更多功能（可折叠） -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/more_functions_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="更多功能"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#333333" />

                    <ImageView
                        android:id="@+id/expand_icon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_expand_more"
                        android:rotation="0" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/more_functions_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:paddingHorizontal="16dp"
                    android:paddingBottom="16dp">

                    <!-- 功能列表项 -->
                    <TextView
                        android:id="@+id/growth_record_item"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="📈 成长记录"
                        android:textSize="16sp"
                        android:textColor="#333333"
                        android:padding="12dp"
                        android:background="?android:attr/selectableItemBackground" />

                    <TextView
                        android:id="@+id/medical_record_item"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="🏥 病历档案"
                        android:textSize="16sp"
                        android:textColor="#333333"
                        android:padding="12dp"
                        android:background="?android:attr/selectableItemBackground" />

                    <TextView
                        android:id="@+id/vaccine_schedule_item"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="💉 疫苗计划"
                        android:textSize="16sp"
                        android:textColor="#333333"
                        android:padding="12dp"
                        android:background="?android:attr/selectableItemBackground" />

                    <TextView
                        android:id="@+id/grooming_item"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="✂️ 美容护理"
                        android:textSize="16sp"
                        android:textColor="#333333"
                        android:padding="12dp"
                        android:background="?android:attr/selectableItemBackground" />

                    <TextView
                        android:id="@+id/device_settings_item"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="⚙️ 设备管理"
                        android:textSize="16sp"
                        android:textColor="#333333"
                        android:padding="12dp"
                        android:background="?android:attr/selectableItemBackground" />

                    <TextView
                        android:id="@+id/data_analysis_item"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="📊 数据分析"
                        android:textSize="16sp"
                        android:textColor="#333333"
                        android:padding="12dp"
                        android:background="?android:attr/selectableItemBackground" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>